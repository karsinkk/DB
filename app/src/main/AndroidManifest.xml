<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thirdreich.db" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Modify"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_modify"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name=".Search"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_search"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name=".FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_fullscreen"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".util.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".util.util.modifydb"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_modifydb"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name=".util.viewdb"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_viewdb"
            android:theme="@style/FullscreenTheme" >
        </activity>
    </application>

</manifest>
